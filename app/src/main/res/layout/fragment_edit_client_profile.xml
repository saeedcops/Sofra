<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/colorWhite"
            android:id="@+id/edit_client_profile_fragment_ll_parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_client_profile_fragment_iv"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/kfc"
                android:layout_gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/myTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_client_profile_fragment_name"
                    style="@style/myTextView"
                    android:maxLines="1"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/person"
                    android:drawableTint="@color/colorText"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_text_5"
                    android:padding="@dimen/_10sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/myTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_client_profile_fragment_email"
                    style="@style/myTextView"
                    android:maxLines="1"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_email_white"
                    android:drawableTint="@color/colorText"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_text_5"
                    android:padding="@dimen/_10sdp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/myTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_client_profile_fragment_et_phone"
                    style="@style/myTextView"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_phone_white"
                    android:drawableTint="@color/colorText"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_text_5"
                    android:padding="@dimen/_10sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/rectangle_text_4"
                android:layout_margin="@dimen/_10sdp">

                <Spinner
                    android:id="@+id/edit_client_profile_fragment_sp_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/tv"
                    />
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/home"
                    android:drawableTint="@color/colorText"
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/rectangle_text_4"
                android:layout_margin="@dimen/_10sdp">

                <Spinner
                    android:id="@+id/edit_client_profile_fragment_sp_region"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/tvr"
                    />
                <TextView
                    android:id="@+id/tvr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/home"
                    android:drawableTint="@color/colorText"
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/edit_client_profile_fragment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_btn"
                android:layout_gravity="center"
                android:text="@string/edit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"/>
        </LinearLayout>
    </ScrollView>
</layout>