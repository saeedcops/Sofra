<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/order_current_adapter_rl_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rectangle_text_6"
        >

        <ImageView
            android:id="@+id/order_current_adapter_iv"
            android:padding="@dimen/_5sdp"
            android:background="@color/colorWhite"
            android:layout_width="@dimen/_80sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/salad"/>
        <TextView
            android:id="@+id/order_current_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:layout_toEndOf="@+id/order_current_adapter_iv"
            android:textStyle="bold"
            android:textSize="@dimen/_18ssp"/>
        <TextView
            android:id="@+id/order_current_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/order_current_adapter_name"
            android:layout_toEndOf="@+id/order_current_adapter_iv"
            />
        <TextView
            android:id="@+id/order_current_adapter_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/order_current_adapter_number"
            android:layout_toEndOf="@+id/order_current_adapter_iv"
           />
        <TextView
            android:id="@+id/order_current_adapter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/order_current_adapter_total"
            android:layout_toEndOf="@+id/order_current_adapter_iv"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/order_current_adapter_btn_accept"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_shape_2"
                android:drawableEnd="@drawable/like"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="@string/accept"/>
            <Button
                android:id="@+id/order_current_adapter_btn_cancel"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:backgroundTint="@color/albumColorPrimaryBlack"
                android:background="@drawable/rectangle_shape_2"
                android:drawableEnd="@drawable/close"
                android:drawableTint="@color/colorWhite"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="@string/cancel"/>

        </LinearLayout>
    </RelativeLayout>
</layout>