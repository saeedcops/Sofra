<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/restaurant_notification_adapter_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/restaurant_notification_adapter_cv"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/restaurant_notification_adapter_child_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/restaurant_notification_adapter_iv_notify"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/notification" />

                <TextView
                    android:id="@+id/restaurant_notification_adapter_tv_notify"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Notification about"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/restaurant_notification_adapter_iv_time"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_24dp" />

                <TextView
                    android:id="@+id/restaurant_notification_adapter_tv_time"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="sun:29/11/2010"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>