<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/register_restaurant_fragment_rl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_bg_1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/auth_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_name"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/person"
                    android:hint="@string/restaurant_name" />

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_email"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_email_white"
                    android:hint="@string/email" />

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_delivery_time"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_time_white"
                    android:hint="@string/delivery_time"
                    android:inputType="number" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <TextView
                        style="@style/myAuthTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/home"
                        android:drawableEnd="@drawable/ic_arrow_downward_white" />

                    <Spinner
                        android:id="@+id/register_restaurant_fragment_sp_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_44sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorWhite" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <TextView
                        style="@style/myAuthTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/home"
                        android:drawableEnd="@drawable/ic_arrow_downward_white" />

                    <Spinner
                        android:id="@+id/register_restaurant_fragment_sp_region"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_44sdp"
                         />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorWhite" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_password"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_password_white"
                    android:hint="@string/password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_password_confirm"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_password_white"
                    android:hint="@string/password_confirm"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_minimum_charger"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_money_white"
                    android:hint="@string/minimum_charger"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/register_restaurant_fragment_et_delivery_cost"
                    style="@style/myAuthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_money_white"
                    android:hint="@string/delivery_cost"
                    android:inputType="number" />

                <Button
                    android:id="@+id/register_restaurant_fragment_btn_register"
                    style="@style/myAuthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/rectangle_btn"
                    android:text="@string/continue_register" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>