<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/client_order_pending_adapter_rl_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rectangle_text_6"
        >

        <ImageView
            android:id="@+id/client_order_pending_adapter_iv"
            android:padding="@dimen/_5sdp"
            android:background="@color/colorWhite"
            android:layout_width="@dimen/_80sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/salad"/>
        <TextView
            android:id="@+id/client_order_pending_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:layout_toEndOf="@+id/client_order_pending_adapter_iv"
            android:textStyle="bold"
            android:textSize="@dimen/_18ssp"/>
        <TextView
            android:id="@+id/client_order_pending_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/client_order_pending_adapter_name"
            android:layout_toEndOf="@+id/client_order_pending_adapter_iv"
            />
        <TextView
            android:id="@+id/client_order_pending_adapter_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/client_order_pending_adapter_number"
            android:layout_toEndOf="@+id/client_order_pending_adapter_iv"
           />
        <TextView
            android:id="@+id/client_order_pending_adapter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myTextView"
            android:text="name: is hassona"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/client_order_pending_adapter_total"
            android:layout_toEndOf="@+id/client_order_pending_adapter_iv"
            />


            <Button
                android:id="@+id/client_order_pending_adapter_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rectangle_shape_black"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:text="@string/cancel"/>


    </RelativeLayout>
</layout>